<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings_view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="currency_rate_live.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='update_currency_live']/../div[2]" position="after">
                    <div attrs="{'invisible': ['|', ('module_currency_rate_live', '=', False), ('currency_provider', '!=', 'bna')]}" groups="base.group_no_one">
                        <div class="row">
                            <label for="l10n_ar_bna_rate_type" class="col-md-3 o_light_label"/>
                            <field name="l10n_ar_bna_rate_type"/>
                       </div>
                        <div class="row">
                            <label for="l10n_ar_bna_currency_value" class="col-md-3 o_light_label"/>
                            <field name="l10n_ar_bna_currency_value"/>
                       </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
